{{ include('admin/navAdmin.html.twig') }}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="tableClient">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ client.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ client.roles ? client.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ client.password }}</td>
            </tr>
            <tr>
                <th>NomClient</th>
                <td>{{ client.nomClient }}</td>
            </tr>
            <tr>
                <th>PrenomClient</th>
                <td>{{ client.prenomClient }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ client.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a  href="{{ path('app_admin_client_index') }}">back to list</a>

    <a  href="{{ path('app_admin_client_edit', {'id': client.id}) }}">edit</a>

    {{ include('admin/admin_client/_delete_form.html.twig') }}
{% endblock %}
