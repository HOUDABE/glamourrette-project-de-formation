{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
<div class="container p-6">
   
				<div class="col-12 text-center mt-3 mb-5">
				<h1>Client</h1>
				</div>
    

    <table class="tableClient">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ client.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ client.roles ? client.roles|json_encode : '' }}</td>
            </tr>
           
            <tr>
                <th>NomClient</th>
                <td>{{ client.nomClient }}</td>
            </tr>
            <tr>
                <th>PrenomClient</th>
                <td>{{ client.prenomClient }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ client.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
      <button type="button" class="btn btn-outline-success">
				   <a  href="{{ path('app_admin_client_index') }}">back to list</a>

			</button>

  <button type="button" class="btn btn-outline-success">
				   <a  href="{{ path('app_admin_client_edit', {'id': client.id}) }}">edit</a>
			</button>


   
 

    {{ include('admin/admin_client/_delete_form.html.twig') }}
    </div>
{% endblock %}
