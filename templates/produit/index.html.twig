{% extends 'base.html.twig' %}
{% block titre %}GLAMOURRETTE | maquillage | beaut√© | parfum homme|parfum femme {% endblock %}
{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ImageProduit</th>
                <th>TitreProduit</th>
                <th>DescProduit</th>
                <th>PrixProduit</th>
                <th>Categorie</th>
                <th>DateArrive</th>
                <th>actions</th>

            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                  <td> <img src="{{asset('upload/' ~  produit.imageProduit ) }}"  width="20%" alt="Hostinger"> </td>
                <td>{{ produit.titreProduit }}</td>
                <td>{{ produit.descProduit }}</td>
                <td>{{ produit.prixProduit }}</td>
                 <td>{{ produit.categorieR }}</td>
                <td>{{ produit.dateArrive ? produit.dateArrive|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_produit_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('app_admin_produit_edit', {'id': produit.id}) }}">edit</a>
                </td>
                
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_produit_new') }}">Create new</a>
{% endblock %}
